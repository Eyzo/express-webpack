{% extends 'movies/index.twig' %}

{% block content %}
    <!-- Services Section -->
    <h2 class="text-center mt-0">Page formulaire d'edition de {{ movie.title }}</h2>
    <form method="post" action="/{{ movie.id }}/edit">
        <div class="form-group">
            <label for="title">Titre du film :</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ movie.title }}">
        </div>
        <div class="form-group">
            <label for="synopsis">Synopsis du film :</label>
            <textarea class="form-control" id="synopsis" name="synopsis" required>{{ movie.synopsis }}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Image du film</label>
            <input type="text" id="image" name="image" class="form-control" value="{{ movie.image }}" required>
        </div>
        <div class="form-group">
            <label for="year">Ann√©e de sortie du film :</label>
            <input type="number" id="year" name="year" class="form-group" min="1900" max="2020" value="{{ movie.year }}" required>
        </div>
        <div class="form-group">
            <label for="rate">Note du film :</label>
            <input type="number" min="0" max="5" required class="form-group" id="rate" name="rate" value="{{ movie.rate }}">
        </div>
        <div class="form-group row">
            <a href="/{{ movie.id }}" class="btn btn-secondary w-50">retour</a>
            <button type="submit" class="btn btn-primary w-50">valider</button>
        </div>
    </form>
{% endblock %}